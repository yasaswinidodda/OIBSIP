    <body background="tc5.jpg">
    <div class="container"> 
           <h1> Temperature Converter</h1> 
        <div class="converter-row"> 
            <div class="col"> 
                <label>Fahrenheit(&deg;F)</label> 
                <input type="number" id="fahrenheit">
            </div> 
            <div class="col"> 
                <label>Celsius(&deg;C)</label> 
                <input type="number" id="celsius"> 
            </div> 
            <div class="col"> 
                <label>Kelvin(K)</label> 
                <input type="number" id="kelvin"> 
            </div> 
        </div> 
        <button onclick="convertTemperature()">Convert</button>
    </div> 
    <script> 
     celsius = document.getElementById('celsius'); 
         fahrenheit = document.getElementById('fahrenheit'); 
         kelvin = document.getElementById('kelvin');
        function convertTemperature(){ 
        celsius.oninput = function () { 
         f = (parseFloat(celsius.value) * 9) / 5 + 32; 
            fahrenheit.value = parseFloat(f.toFixed(2)); 
             k = (parseFloat(celsius.value) + 273.15);
            kelvin.value = parseFloat(k.toFixed(2));
        } 
        fahrenheit.oninput= function () { 
         c = ((parseFloat( 
                fahrenheit.value) - 32) * 5) / 9; 
            celsius.value = parseFloat(c.toFixed(2)); 
            k = (parseFloat(
                fahrenheit.value) - 32) * 5 / 9 + 273.15; 
            kelvin.value = parseFloat(k.toFixed(2)); 
        } 
        kelvin.oninput = function () { 
        f = (parseFloat( 
                kelvin.value) - 273.15) * 9 / 5 + 32; 
            fahrenheit.value = parseFloat(f.toFixed(2)); 
            c = (parseFloat(kelvin.value) - 273.15); 
            celsius.value = parseFloat(c.toFixed(2)); 
        } 
    }
    </script>
    </body>
